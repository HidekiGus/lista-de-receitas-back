generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String    @unique
  password String
  likes    Likes[]
  recipes  Recipes[]

  @@map("users")
}

model Recipes {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  userId      String        @db.ObjectId
  createdAt   DateTime      @default(now())
  image       String
  portions    Int
  time        Int
  user        Users         @relation(fields: [userId], references: [id])
  ingredients Ingredients[]
  likes       Likes[]
  methodSteps MethodSteps[]

  @@unique([title, userId])
  @@map("recipes")
}

model Likes {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  recipeId  String   @db.ObjectId
  createdAt DateTime @default(now())
  recipe    Recipes  @relation(fields: [recipeId], references: [id])
  user      Users    @relation(fields: [userId], references: [id])

  @@map("likes")
}

model MethodSteps {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  recipeId    String   @db.ObjectId
  description String
  createdAt   DateTime @default(now())
  recipe      Recipes  @relation(fields: [recipeId], references: [id])

  @@map("methodSteps")
}

model Ingredients {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  recipeId    String   @db.ObjectId
  description String
  createdAt   DateTime @default(now())
  recipe      Recipes  @relation(fields: [recipeId], references: [id])

  @@map("ingredients")
}
