generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  password     String
  likes        Likes[]
  recipes      Recipes[]
  savedRecipes SavedRecipes[]

  @@map("users")
}

model Recipes {
  id           Int            @id @default(autoincrement())
  title        String
  userId       Int
  createdAt    DateTime       @default(now())
  image        String
  portions     Int
  time         Int
  user         Users          @relation(fields: [userId], references: [id])
  ingredients  Ingredients[]
  likes        Likes[]
  methodSteps  MethodSteps[]
  savedRecipes SavedRecipes[]

  @@unique([title, userId])
  @@map("recipes")
}

model Likes {
  id        Int      @id @default(autoincrement())
  userId    Int
  recipeId  Int
  createdAt DateTime @default(now())
  recipe    Recipes  @relation(fields: [recipeId], references: [id])
  user      Users    @relation(fields: [userId], references: [id])

  @@map("likes")
}

model SavedRecipes {
  id        Int      @id @default(autoincrement())
  userId    Int
  recipeId  Int
  createdAt DateTime @default(now())
  recipe    Recipes  @relation(fields: [recipeId], references: [id])
  user      Users    @relation(fields: [userId], references: [id])

  @@map("savedRecipes")
}

model MethodSteps {
  id          Int      @id @default(autoincrement())
  recipeId    Int
  description String
  createdAt   DateTime @default(now())
  recipe      Recipes  @relation(fields: [recipeId], references: [id])

  @@map("methodSteps")
}

model Ingredients {
  id          Int      @id @default(autoincrement())
  recipeId    Int
  description String
  createdAt   DateTime @default(now())
  recipe      Recipes  @relation(fields: [recipeId], references: [id])

  @@map("ingredients")
}
